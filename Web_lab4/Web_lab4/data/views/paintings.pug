extends layout

block main
    script(src="/public/js/paintings.js")
    h1 Painting shelf

    table
        each painting in paintings
            tr
                td
                    each val, key in painting
                        if (key === 'title')
                            - var paintingTitle = val
                        if (key === 'active' && val == "true")
                            a(href=`paintings/?id=${painting.id}` class="active")= paintingTitle
                        if (key === 'active' && val == "false")
                            a(href=`paintings/?id=${painting.id}` class="notActive")= paintingTitle
                            

    a(href="/mainPage")
        button#backButton Back
    button#activateAllButton Activate all paintings